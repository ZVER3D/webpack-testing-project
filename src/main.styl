$grey = #444

body
    margin: 0
    background-color: $grey

.profile
    height: 100vh
    display: flex
    align-items: center
    justify-content: center
    flex-flow: column
    
    h1
        color: #fff
        font-size: 5em
        font-family: sans-serif
        text-shadow: 0 0 20px black

    img
        border-radius: 30%
        width: 300px
        box-shadow: 0 0 20px black